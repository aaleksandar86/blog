 <div class="columns is-multiline">
    <div class="column is-6 is-offset-3">
      <div class="content is-size-3">
        <h1>New User</h1>
      </div>
    </div>

<% if @user.errors.any? %>
  <div class="column is-6 is-offset-3">
    <div class="container">
      <div id="error_explanation">
        <article class="message is-danger">
            <div class="message-body">
              <p><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</p><br>
                <ul>
                  <% @users.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
            </div>
         </article>
        </div>
      </div>
    </div>
  </div>
<% end %>

    <div class="column is-6 is-offset-3">
      <%= form_with model: article, local: true do |form| %>
        <div class="field">
          <%= form.label :name, class: "label" %>
          <div class="control">
            <%= form.text_field :name, class: "input", placeholder: "Title" %>
          </div>
          <% if @user.errors.any? %>
            <p class="help is-danger">This title is invalid</p>
          <% end %>
        </div>

        <div class="field">
          <%= form.label :email, class: "label" %>
            <div class="control">
              <%= form.text_field :email, class: "input", placeholder: 'Your email' %>
            </div>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <%= form.submit submit, class: "button is-link" %>
          </div>
          <div class="control">
            <%= link_to "Cancel", cancel_path, class: 'button is-link is-light' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>